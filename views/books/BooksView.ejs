<%- include('../partials/header.ejs', {title:'Books'}) %>

<h1 class="display-3">Books</h1>
<div class="row mb-2">
    <h4 class="pl-3">Filter: <%= filter %></h4>

    <% books.forEach(book => { %>
    <div class="col-md-12">
        <div class="card flex-md-row mb-4 box-shadow h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
                <strong class="d-inline-block mb-2 text-primary">
                    Author:
                    <a href="/books/author/<%= book.author_id %>">
                        <%= book.author_fullname %>
                    </a>
                </strong>
                <p>
                    <strong>Genre:</strong>
                    <a href="/books/genre/<%= book.genre %>">
                        <%= book.genre %>
                    </a>
                </p>
                <h3 class="mb-0">
                    <a class="text-dark" href="/books/<%= book.id %>"
                        ><%= book.title %></a
                    >
                </h3>
                <p class="card-text mb-auto"><%= book.description %></p>
                <a href="/books/<%= book.id %>">Show details</a>
            </div>
            <img
                class="card-img-right flex-auto d-none d-md-block"
                alt="Thumbnail [200x250]"
                style="width: 200px; height: 250px"
                src="/images/book_thumbnail.svg"
            />
        </div>
    </div>
    <% }); %>
</div>

<%- include('../partials/pagination.ejs') %> <%-
include('../partials/footer.ejs') %>
