<%- include('../partials/header.ejs', {title:'Update author'}) %>

<h1 class="display-3">Update author</h1>
<form method="post">
    <div class="form-group">
        <label for="first_name">First name</label>
        <input
            name="first_name"
            type="text"
            class="form-control"
            id="first_name"
            placeholder="First name"
            required
            value="<%= author[0].first_name %>"
        />
    </div>
    <div class="form-group">
        <label for="last_name">Last name</label>
        <input
            name="last_name"
            type="text"
            class="form-control"
            id="last_name"
            placeholder="Last name"
            required
            value="<%= author[0].last_name %>"
        />
    </div>
    <div class="form-group">
        <label for="birthdate">Birthdate</label>
        <input
            name="birthdate"
            type="date"
            class="form-control"
            id="birthdate"
            placeholder="Birthdate"
            required
            value="<%= author[0].birthdate %>"
        />
    </div>
    <div class="form-group">
        <label for="biography">Biography</label>
        <textarea
            name="biography"
            class="form-control"
            id="biography"
            rows="3"
            required
        >
<%= author[0].biography %></textarea
        >
    </div>
    <button type="submit" class="btn btn-primary">Update author</button>
</form>

<%- include('../partials/footer.ejs') %>
