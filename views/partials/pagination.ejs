<% if (totalPages > 1) { %>
<nav aria-label="Page navigation">
    <ul class="pagination">
        <% if (page > 1) { %>
        <li class="page-item">
            <a class="page-link" href="?page=1&limit=<%= limit %>"
                >First page</a
            >
        </li>
        <li class="page-item">
            <a class="page-link" href="?page=<%= page - 1 %>&limit=<%= limit %>"
                >Previous</a
            >
        </li>
        <% } %> <% if (page > 3) { %>
        <li class="page-item">
            <a class="page-link" href="?page=1&limit=<%= limit %>">1</a>
        </li>
        <% if (page > 4) { %>
        <li class="page-item">
            <span class="page-link">...</span>
        </li>
        <% } %> <% } %> <% for (let i = Math.max(1, page - 2); i <=
        Math.min(totalPages, page + 2); i++) { %>
        <li class="page-item <%= i === page ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>&limit=<%= limit %>"
                ><%= i %></a
            >
        </li>
        <% } %> <% if (page < totalPages - 2) { %> <% if (page < totalPages - 3)
        { %>
        <li class="page-item">
            <span class="page-link">...</span>
        </li>
        <% } %>
        <li class="page-item">
            <a
                class="page-link"
                href="?page=<%= totalPages %>&limit=<%= limit %>"
                ><%= totalPages %></a
            >
        </li>
        <% } %> <% if (page < totalPages) { %>
        <li class="page-item">
            <a class="page-link" href="?page=<%= page + 1 %>&limit=<%= limit %>"
                >Next</a
            >
        </li>
        <li class="page-item">
            <a
                class="page-link"
                href="?page=<%= totalPages %>&limit=<%= limit %>"
                >Last page</a
            >
        </li>
        <% } %>
    </ul>
</nav>
<% } %>
