<%- include('../partials/header.ejs', {title:'Publishers'}) %>

<h1 class="display-3">Publishers</h1>
<section class="bsb-author-2 py-3 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10 col-xl-8 col-xxl-7">
                <% publishers.forEach(publisher => { %>
                <div class="card border-light-subtle p-4 mb-4">
                    <div class="row gy-3 align-items-center">
                        <div class="col-md-4">
                            <a
                                href="/books/publisher/<%= publisher.id %>"
                                class="bsb-hover-image d-block rounded overflow-hidden"
                            >
                                <img
                                    class="img-fluid author-avatar bsb-scale bsb-hover-scale-up"
                                    loading="lazy"
                                    src="/images/publisher.svg"
                                    alt="Iris Henry"
                                />
                            </a>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h3 class="card-title mb-2">
                                    <a
                                        class="card-link link-dark text-decoration-none"
                                        href="/books/publisher/<%= publisher.id %>"
                                        ><%= publisher.name %></a
                                    >
                                </h3>
                                <h6
                                    class="card-subtitle mb-2 text-body-secondary"
                                >
                                    <strong>Adress:</strong> <%=
                                    publisher.address %>
                                </h6>
                                <h6
                                    class="card-subtitle mb-2 text-body-secondary"
                                >
                                    <strong>Phone:</strong> <%= publisher.phone
                                    %>
                                </h6>
                                <h6
                                    class="card-subtitle mb-2 text-body-secondary"
                                >
                                    <strong>Web-site:</strong>
                                    <a href="<%= publisher.website %>"
                                        ><%= publisher.website %></a
                                    >
                                </h6>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <button
                            type="button"
                            class="btn btn-warning"
                            onclick="location.href='/publishers/update/<%= publisher.id %>';"
                        >
                            Edit
                        </button>
                        <button
                            type="button"
                            class="btn btn-danger"
                            onclick="confirmDelete(<%= publisher.id %>, 'publisher')"
                        >
                            Delete
                        </button>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</section>

<%- include('../partials/footer.ejs') %>
