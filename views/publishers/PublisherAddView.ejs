<%- include('../partials/header.ejs', {title:'Add publisher'}) %> <% if (typeof
lastID !== 'undefined') { %>
<h5 class="text-primary">Publisher added ID <%= lastID %></h5>
<% } %>

<h1 class="display-3">Add publisher</h1>
<form method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input
            name="name"
            type="text"
            class="form-control"
            id="name"
            placeholder="Name"
            required
        />
    </div>
    <div class="form-group">
        <label for="address">Address</label>
        <input
            name="address"
            type="text"
            class="form-control"
            id="address"
            placeholder="Address"
            required
        />
    </div>
    <div class="form-group">
        <label for="phone">Phone</label>
        <input
            name="phone"
            type="tel"
            class="form-control"
            id="phone"
            placeholder="Phone"
            required
        />
    </div>
    <div class="form-group">
        <label for="website">Website</label>
        <input
            name="website"
            type="url"
            class="form-control"
            id="website"
            placeholder="Website"
            required
        />
    </div>
    <button type="submit" class="btn btn-primary">Add publisher</button>
</form>

<%- include('../partials/footer.ejs') %>
