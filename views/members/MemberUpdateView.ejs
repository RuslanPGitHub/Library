<%- include('../partials/header.ejs', {title:'Update member'}) %>

<h1 class="display-3">Update member</h1>
<form method="post">
    <div class="form-group">
        <label for="first_name">First name</label>
        <input
            name="first_name"
            type="text"
            class="form-control"
            id="first_name"
            placeholder="First name"
            required
            value="<%= member[0].first_name %>"
        />
    </div>
    <div class="form-group">
        <label for="last_name">Last name</label>
        <input
            name="last_name"
            type="text"
            class="form-control"
            id="last_name"
            placeholder="Last name"
            required
            value="<%= member[0].last_name %>"
        />
    </div>
    <div class="form-group">
        <label for="birthdate">Birthdate</label>
        <input
            name="birthdate"
            type="date"
            class="form-control"
            id="birthdate"
            placeholder="Birthdate"
            required
            value="<%= member[0].birthdate %>"
        />
    </div>
    <div class="form-group">
        <label for="address">Address</label>
        <input
            name="address"
            type="text"
            class="form-control"
            id="address"
            placeholder="Address"
            required
            value="<%= member[0].address %>"
        />
    </div>
    <div class="form-group">
        <label for="phone">Phone</label>
        <input
            name="phone"
            type="text"
            class="form-control"
            id="phone"
            placeholder="Phone"
            required
            value="<%= member[0].phone %>"
        />
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input
            name="email"
            type="email"
            class="form-control"
            id="email"
            placeholder="Email"
            required
            value="<%= member[0].email %>"
        />
    </div>
    <button type="submit" class="btn btn-primary">Update member</button>
</form>

<%- include('../partials/footer.ejs') %>
